---
import { getAssetPath } from "../utils/paths.js";

const antiqueCategories = [
  {
    title: "Muebles antiguos",
    image: getAssetPath("assets/mueble.webp"),
    description: "Armarios, mesas, sillas y más de épocas pasadas",
  },
  {
    title: "Relojes vintage",
    image: getAssetPath("assets/reloj.webp"),
    description: "Relojes de péndulo, de bolsillo y de pared",
  },
  {
    title: "Arte y esculturas",
    image: getAssetPath("assets/escultura.webp"),
    description: "Cuadros, estatuas y obras de arte históricas",
  },
  {
    title: "Objetos decorativos",
    image: getAssetPath("assets/objeto.jpg"),
    description: "Lámparas, espejos y elementos decorativos clásicos",
  },
];
---

<section class="px-4 py-16">
  <h2 class="mb-12 text-center font-bold text-amber-800 text-3xl">
    Tipos de antigüedades que compramos
  </h2>

  <div class="scrollbar-hide flex gap-6 overflow-x-auto px-4 pb-8">
    {
      antiqueCategories.map((category) => (
        <div class="relative h-64 min-w-[320px] overflow-hidden rounded-lg bg-white shadow-lg">
          <img
            src={category.image}
            alt={category.title}
            class="h-full w-full object-cover"
          />
          <div class="absolute inset-x-0 bottom-0 bg-gray-800/80 p-4 text-white">
            <h3 class="mb-2 font-semibold text-xl">{category.title}</h3>
            <p class="text-gray-200">{category.description}</p>
          </div>
        </div>
      ))
    }
  </div>
</section>
